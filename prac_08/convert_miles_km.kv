BoxLayout:
    orientation: 'vertical'

    BoxLayout:
        orientation: 'horizontal'

        TextInput:
            id: input_number
            multiline: False
            # This event is when the user enters text (and presses Enter)
            on_text_validate: app.handle_update(self.text)

        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.3

            Button:
                text: 'Up'
                on_press: app.increment_input(1)
            Button:
                text: 'Down'
                on_press: app.increment_input(-1)

    Button:
        text: 'Convert miles to km'
        on_press: app.handle_conversion(input_number.text)

    Label:
        id: output_label
        text: app.number
        font_size: 30
        color: (1, 1, 0, 1)